[Unit]
Description=Receive science packets and forward them elsewhere (to files or other IPs)
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
ExecStart=start_science_udpcapture
StandardOutput=inherit
StandardError=journal
Restart=on-failure
RestartSec=5
User=impish

[Install]
WantedBy=multi-user.target
